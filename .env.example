# Configuración de integración con RecLocation
RECLOCATION_API_URL=https://your-reclocation-api.com/api/timing
RECLOCATION_API_TOKEN=your_secure_reclocation_token_here

# Configuración de la aplicación
APP_URL=https://your-app-url.herokuapp.com
PORT=3000
NODE_ENV=production
USE_WEBHOOK=false

# Configuración de servicios externos
OPENAI_API_KEY=sk-proj-your_openai_key_here
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_GROUP_ID=your_telegram_group_id

# Configuración del grupo de RecLocation
RECLOCATION_GROUP_ID=your_reclocation_group_id

# Lista de Chat IDs autorizados para usar el bot (separados por comas)
ALLOWED_CHAT_IDS=chatid1,chatid2,chatid3